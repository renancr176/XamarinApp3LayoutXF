<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp3LayoutXF.Layouts.Absolute.AbsolutePage"
             Title="Absolute Layout"
             BackgroundColor="#8cf3ff">
    <ContentPage.Content>
        <AbsoluteLayout>
            <!-- <BoxView AbsoluteLayout.LayoutBounds="X, Y, W, H" BackgroundColor="Blue"></BoxView> -->
            <BoxView AbsoluteLayout.LayoutBounds="0, 0, 200, 100" 
                     BackgroundColor="Blue"></BoxView>
            <BoxView AbsoluteLayout.LayoutBounds="50, 50, 100, 100"
                     BackgroundColor="OrangeRed"></BoxView>
            <BoxView AbsoluteLayout.LayoutBounds="150, 150, 50, 50"
                     BackgroundColor="Yellow"></BoxView>

            <BoxView AbsoluteLayout.LayoutFlags="WidthProportional"
                     AbsoluteLayout.LayoutBounds="0, 250, 0.5, 100"
                     BackgroundColor="Purple"></BoxView>
            <BoxView AbsoluteLayout.LayoutFlags="SizeProportional"
                     AbsoluteLayout.LayoutBounds="350, 200, 0.8, 0.8"
                     BackgroundColor="Green"></BoxView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>